server {
    listen 80;
    server_name ${SITE};

    location = /favicon.ico {
        access_log off; log_not_found off;
    }

    location /static/ {
        root /root/${DIR_SOURCES}/${DIR_PROJECT};
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn.sock;
    }
}
