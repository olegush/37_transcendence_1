[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/var/www/transcendence/transcendence
ExecStart=/var/www/transcendence/env/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/gunicorn.sock \
          ${DIR_PACKAGE}.wsgi:application

[Install]
WantedBy=multi-user.target
